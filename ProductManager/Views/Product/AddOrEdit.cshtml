@model ProductManager.Models.Entities.Product

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div class="form-group">
                <input asp-for="Id" class="form-control visually-hidden" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Description" class="text-danger"></span>
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Price" class="text-danger"></span>
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="row form-group my-2">
                <input type="submit" value="Подтвердить" class="btn btn-primary mx-auto" style="width:200px" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
