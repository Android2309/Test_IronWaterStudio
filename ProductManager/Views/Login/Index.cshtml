@model LoginModel

<div class="bg-dark text-white p-2">
    <span class="navbar-brand ml-2">Авторизация</span>
</div>
@if (!LoginData.isLoggedIn)
{
    <div>Подсказка( @LoginData.login : @LoginData.password )</div>
    <div class="m-1 p-1">
        <form asp-action="Index" asp-controller="Login" method="post">
            <div class="form-group">
                <label asp-for="Login"></label>
                <div class="text-danger">@Html.ValidationMessageFor(m => m.Login)</div>
                <input asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="text-danger">@Html.ValidationMessageFor(m => m.Password)</div>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <button class="btn btn-primary mt-2" type="submit">Войти</button>
        </form>
    </div>
}
else {
    <div class="m-1 p-1">
        <p>Пользователь @LoginData.login - авторизован</p>
        <form asp-action="Logout" asp-controller="Login" method="post">
            <button class="btn btn-primary mt-2" type="submit">Выйти</button>
        </form>
    </div>
}